<div class="container">
 <h1>マイページ</h1>
   <table class="table"> 
    <tr>
     <td>登録情報</td><td><%= link_to "編集する", edit_customer_path(@customer.id),class: "btn btn-success" %></td>
    </tr>
   </table>
   <table class="table table-striped">
    <tr>
     <td>氏名</td>
     <td><%= @customer.first_name %><%= @customer.last_name %></td>
    </tr>
    <tr>
     <td>フリガナ</td>
     <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
     <td>郵便番号</td>
     <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
     <td>電話番号</td>
     <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
     <td>住所</td>
     <td><%= @customer.address %></td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td><%= @customer.email %></td>
    </tr>
    
   </table>
   <table class="table">
    <tr>
     <td>配送先</td>
     <td><%= link_to "一覧を見る",orders_path,class: "btn btn-primary" %></td>
    </tr>
    <tr>
     <td>注文履歴</td>
     <td><%= link_to "一覧を見る",orders_path,class: "btn btn-primary" %></td>
    </tr>
   </table>
       
</div>
