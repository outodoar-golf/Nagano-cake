<div class="container">
  <%= render "layouts/errors",obj: @genre %>
  <%= notice %>
  <h1>ジャンル一覧・追加</h1>
  <%= form_with model: @genre,url: admin_genres_path do |f| %>
    ジャンル名　<%= f.text_field :name %>
    <%= f.submit"新規登録" %>
  <% end %>

  <table class="table">
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to"編集する",edit_admin_genre_path(genre.id),class:"btn btn-success" %></td>
    </tr>
    <% end %>
  </table>
</div>