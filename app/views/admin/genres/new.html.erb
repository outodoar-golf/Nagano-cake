<div class="container mt-5">
  <div class="row">
    <div class="col-5">

      <% flash.each do |message_type, messages| %>
        <% messages.each do |message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
      <% end %>

      <%= notice %>

      <h3 class="text-center mb-5 mt-5">ジャンル一覧・追加</h3>
      <%= form_with model: @genre,url: admin_genres_path do |f| %>
        ジャンル名　<%= f.text_field :name %>
        <%= f.submit"新規登録",class:"btn btn-success" %>
      <% end %>

      <table class="table mt-5">
        <tr class="text-center">
          <td class="table-dark">ジャンル</td>
          <td class="table-dark"></td>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td class="text-right"><%= link_to"編集する",edit_admin_genre_path(genre.id),class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>