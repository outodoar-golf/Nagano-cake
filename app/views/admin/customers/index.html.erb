<div class="container">
  <div class= "row">
    <div class= "col-lg-1"></div>
    <dv class= "col-lg-2">
      <h1 class= "bg-light">会員一覧</h1>
    </dv>
    <div class= "col-lg-9"></div>
  </div>
  <div class= "row">
    <div class= "col-lg-2"></div>
    <div class= "col-lg-8">
      <table class="table">
        <tr class= "bg-light">
          <td>会員ID</td>
          <td>氏名</td>
          <td>メールアドレス</td>
          <td>ステータス</td>
        </tr>
              <% @customer.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer.id) do%>
              <%= customer.first_name %> <%=customer.last_name %>
              <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><%= customer.is_deleted ? "退会" : "有効" %></td>
              <% end %>
        </tr>
      </table>
    <div class= "col-lg-2"></div>
    </div>
  </div>
  <div class="text-center"><%= paginate @customer %></div>
</div>
