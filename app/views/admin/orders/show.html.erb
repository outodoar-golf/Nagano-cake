<h4 class="m-5 w-25 bg-light text-center">注文履歴詳細</h4>
<br>
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <table class="table table-borderless">
         <thead>
            <tr>
              <th>購入者</th>
              <td>
                <%= @order.customer.first_name %>
                <%= @order.customer.last_name %>
              </td>
            </tr>
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>〒<%= @order.postal_code %>
              <%= @order.address %></br>
              <%= @order.full_name %>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td class="">
                <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
                <%= f.select :status, Order.statuses_i18n.invert,{prompt: false}, class: "form-control form-control-sm col-6" %>
                <%= f.submit '更新', class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
           </tr>
         </thead>
     </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><p><%= order_detail.food.name %></p></td>
              <td><p><%= order_detail.food.with_tax_price.to_s(:delimited) %></p></td>
              <td><p><%= order_detail.quantity %></p></td>
              <td><p><%= order_detail.subtotal.to_s(:delimited) %></p></td>
              <td>
                <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch, local: true do |f| %>
                <%= f.select :product_status, OrderDetail.product_statuses_i18n.invert,{prompt: false}, class: "form-control form-control-sm col-7" %>
                <%= f.submit "更新", class:"btn btn-sm btn-success" %>
                <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-4">
      <table class="table table-borderless" style="width:50%">
          <tr>
            <th>商品合計</th>
            <td class="text-right col-xs-5">
              <%= @sum.to_s(:delimited) %>円
            </td>
          </tr>
          <tr>
            <th>送料</th>
            <td class="text-right col-xs-5"><%= @shipping_price %>円</td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td class="text-right col-xs-5"><%= @total_price.to_s(:delimited) %>円</td>
          </tr>
      </table>
    </div>
  </div>
</div>