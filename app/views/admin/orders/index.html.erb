

<div class="container">
  <div class="row">
    <div class="col-11">
      <table class='table table-hover table-inverse'>
  <thead>
    <h2>注文履歴一覧</h2>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
     <td><%= order.created_at.strftime("%Y/%m/%d %-H:%-M:%-S") %></td>
     <td><%= order.full_name %></td>
     <% @order_details.each do |order_detail| %>
     <td><%= order_detail.quantity %></td>
     <% end %>
     <td><%= order.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>
