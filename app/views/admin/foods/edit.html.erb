<!--管理者側-->
<div class="container">
  <h1>商品編集</h1>
  <%= form_with model: @food,url: admin_food_path(@food.id) do |f| %>
    <table>
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image,accept:"image_jpeg" %></td>
      </tr>
      <tr>
        <td>商品名前</td>
        <td><%= f.text_field :name,placeholder:"商品名" %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :explanation,rows: 5,placeholder:"ここに説明文を記述します" %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.select :genre_id,@genre.map{|genre|[genre.name,genre.id]} %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><%= f.radio_button :sale_status,true %><label>販売中</label><%= f.radio_button :sale_status,false %>販売停止中</td>
      </tr>
      <tr>
        <td><%= f.submit"変更を保存" %></td>
      </tr>
    </table>

  <% end %>
 </div>