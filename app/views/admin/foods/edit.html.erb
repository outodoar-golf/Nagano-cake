<!--管理者側-->
<div class="container">
  <h1>商品編集</h1>
  <%= form_with model: @food,url: admin_food_path(@food.id) do |f| %>
    <label>商品画像</label><%= f.file_field :image,accept:"image_jpeg" %><br>
    <label>商品名前</label><%= f.text_field :name,placeholder:"商品名" %><br>
    <label>商品説明</label><%= f.text_area :explanation,rows: 5,placeholder:"ここに説明文を記述します" %><br>
    <label>ジャンル</label><%= f.select :genre_id,@genre.map{|genre|[genre.name,genre.id]} %><br>
    <label>税抜価格</label><%= f.text_field :price %>円<br>
    <label>販売ステータス</label><%= f.radio_button :sale_status,true %><label>販売中</label><%= f.radio_button :sale_status,false %>販売停止中<br>
    <%= f.submit"変更を保存" %>
  <% end %>
 </div>