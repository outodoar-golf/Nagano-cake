<!--管理者側-->
<div class="container">
  <h1>商品編集</h1>
  <div class="row">
   <div class="col-4 mx-auto">

    <% flash.each do |message_type, messages| %>
     <% if messages.class == Array %>
      <% messages.each do |message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
     <% end %>
    <% end %>

    <%= form_with model: @food,url: admin_food_path(@food.id) do |f| %>
      <table>
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :image,accept:"image_jpeg" %></td>
        </tr>
        <tr>
          <td>商品名前</td>
          <td><%= f.text_field :name,placeholder:"商品名",class:"form-control" %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :explanation,rows: 5,placeholder:"ここに説明文を記述します",class:"form-control" %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.select :genre_id,@genre.map{|genre|[genre.name,genre.id]} %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price,class:"form-control" %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= f.radio_button :sale_status,false %>販売中<%= f.radio_button :sale_status,true %><label>販売停止</label></td>
        </tr>
        <tr>
          <td><%= f.submit"変更を保存",class:"btn btn-success" %></td>
        </tr>
      </table>
     </div>
    </div>
  <% end %>
 </div>