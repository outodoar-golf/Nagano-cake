<!--管理者側-->
<div class="container">
 <h1>商品詳細</h1>
  <div class="row">
    <div class="col-4">
      <%= image_tag @food.image,size: '300x200' %>
    </div>
    <div class="col">
      <p>商品名　　　　　　　　<%= @food.name %></p>
      <p>商品説明　　　　　　　<%= @food.explanation %></p>
      <p>ジャンル　　　　　　　<%= @food.genre.name %></p>
      <p>税込価格(税抜価格)　　<%= @food.with_tax_price %>(<%= @food.price %>)円</p>
      <% if @food.get_status(@food.sale_status) == "販売中" %>
        <p>販売ステータス　　　　<span class="text-success font-weight-bold"><%= @food.get_status(@food.sale_status) %></span></p>
      <% else %>
        <p>販売ステータス　　　　<span class="text-secondary font-weight-bold"><%= @food.get_status(@food.sale_status) %></span></p>
      <% end %>
      <%= link_to"編集する",edit_admin_food_path(@food.id),class:"btn btn-success" %>
    </div>
  </div>
</div>