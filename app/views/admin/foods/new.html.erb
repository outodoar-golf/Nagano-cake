<!--管理者側-->
<div class="container">
   <%= render "layouts/errors", obj: @food %>
   <h1>商品新規登録</h1>
   <%= form_with model: @food,url: admin_foods_path do |f| %>
     <label>商品画像</label><%= f.file_field :image,accept:"image_jpeg" %><br>
     <label>商品名前</label><%= f.text_field :name,placeholder:"商品名" %><br>
     <label>商品説明</label><%= f.text_area :explanation,rows: 5,placeholder:"ここに説明文を記述します" %><br>
     <label>ジャンル</label><%= f.select :genre_id,@genre.map{|genre|[genre.name,genre.id]},include_blank: "--選択してください--" %><br>
     <label>税抜価格</label><%= f.text_field :price %>円<br>
     <label>販売ステータス</label><%= f.radio_button :sale_status,false %><label>販売中</label><%= f.radio_button :sale_status,true %>販売停止中<br>
     <%= f.submit"新規登録" %>
   <% end %>
 </div>