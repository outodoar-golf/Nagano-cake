 <div class="container">
  <div class= "row">
    <div class= "col-lg-1"></div>
    <dv class= "col-lg-4">
       <h3 class="bg-light"><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h3>
    </dv>
    <div class= "col-lg-7"></div>
  </div>
  <div class= "row">
    <div class= "col-lg-1"></div>
    <div class= "col-lg-8">
     <table class="table table-borderless">
      <tr>
       <td>会員ID</td>
       <td><%= @customer.id %></td>
      </tr>
      <tr>
       <td>氏名</td>
       <td><%= @customer.first_name %><%= @customer.last_name %></td>
      </tr>
      <tr>
       <td>フリガナ</td>
       <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
      </tr>
      <tr>
       <td>郵便番号</td>
       <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
       <td>住所</td>
       <td><%= @customer.address %></td>
      </tr>
      <tr>
       <td>電話番号</td>
       <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
       <td>メールアドレス</td>
       <td><%= @customer.email %></td>
      </tr>
      <tr>
       <td>会員ステータス</td>
       <td><%= @customer.is_deleted ? "退会" : "有効" %></td>
      </tr>
      <tr>
       <td></td>
       <td><%= link_to "編集", edit_admin_customer_path(@customer.id),class: "btn btn-success" %>
           <%= link_to "注文履歴一覧をみる",admin_orders_path,class: "btn btn-primary" %>
       </td>    
      </tr>
     </table>
    </div>
   </div>
</div>   