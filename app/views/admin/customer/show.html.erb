 <div class="container">
  <h1><%= @customer.first_name %><%= @customer.last_name %>の会員詳細</h1>
  <table class="table">
   <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
   </tr>
   <tr>
    <td>氏名</td>
    <td><%= @customer.first_name %><%= @customer.last_name %></td>
   </tr>
   <tr>
    <td>フリガナ</td>
    <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
   </tr>
   <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
   </tr>
   <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
   </tr>
   <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
   </tr>
   <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
   </tr>
   <tr>
    <td>会員ステータス</td>
    <td><%= @customer.is_deleted %></td>
   </tr>
   <tr>
    <td><%= link_to "編集", edit_admin_customer_path(@customer.id),class: "btn btn-success" %></td>
    <td><%= link_to "注文履歴一覧をみる",admin_orders_path,class: "btn btn-primary" %></td>
   </tr>

  </table>