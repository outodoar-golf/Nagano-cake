<div class="container">
 <div class= "row">
  <div class= "col-lg-2"></div>
  <div class= "col-lg-3">
    <h3 class="bg-light">管理者ログイン</h3>
  </div>
  </div>
  <div class= "row">
  <div class="col-lg-1"></div>
  <div class="col-lg-11">
    <%= form_with model: @admin, url: admin_session_path do |f| %>
    <table class="table table-borderless">
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autofocus: true, size: 50, autocomplete: "email",placeholder:"example@mail.com" %></td>
    </tr>

      <tr>
        <td>パスワード</td>
        <td><%= f.password_field :password, size: 50, autocomplete: "current-password" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "Log in",class: "btn btn-primary" %></td>
      </tr>
  </div>
    </table>
    <% end %>

        <%= render "admin/shared/links" %>
  </div>
</div>
