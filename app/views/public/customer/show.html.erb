<div class="container">
  <div class="row">

    <div class="col-lg-2"></div>
     <div class="col-lg-3">
      <h3 class= "bg-light">マイページ</h3>
     </div>

  </div>
  <div class="row">
   <div class="col-lg-1"></div>
   <div class="col-lg-8">
    <table class="table table-borderless">
        <tr>
         <td>登録情報<%= link_to "編集する", edit_public_customer_path(@customer.id),class: "btn btn-success" %></td>
        </tr>
    </table>
    <table class="table table-bordered">
        <tr>
         <td class= "bg-light">氏名</td>
         <td class= "bg-white"><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
         <td class= "bg-light">フリガナ</td>
         <td class= "bg-white"><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
         <td class= "bg-light">郵便番号</td>
         <td class= "bg-white"><%= @customer.postal_code %></td>
        </tr>
        <tr>
         <td class= "bg-light">電話番号</td>
         <td class= "bg-white"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
         <td class= "bg-light">住所</td>
         <td class= "bg-white"><%= @customer.address %></td>
        </tr>
        <tr>
         <td class= "bg-light">メールアドレス</td>
         <td class= "bg-white"><%= @customer.email %></td>
        </tr>
    </table>
    <table class="table table-borderless">
        <tr>
         <td>配送先<%= link_to "一覧を見る",new_public_address_path,class: "btn btn-primary" %></td>
        </tr>
        <tr>
         <td>注文履歴<%= link_to "一覧を見る",public_orders_path,class: "btn btn-primary" %></td>
        </tr>
    </table>
   </div>
  </div>
</div>


