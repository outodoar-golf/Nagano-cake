<div class="container mt-5">
   <h1>商品新規登録</h1>
   <%= form_with model: @food do |f| %>
     <table>
       <tr>
         <td>商品画像</td>
         <td><%= f.file_field :image,accept:"image_jpeg" %></td>
       </tr>
       <tr>
         <td>商品名前</td>
         <td><%= f.text_field :name,placeholder:"商品名",class="form-control" %></td>
       </tr>
       <tr>
         <td>商品説明</td>
         <td><%= f.text_area :explanation,rows: 5,placeholder:"ここに説明文を記述します" %></td>
       </tr>
       <tr>
         <td>ジャンル</td>
         <td><%= f.select :genre_id,@genre.map{|genre|[genre.name,genre.id]} %></td>
       </tr>
       <tr>
         <td>税抜価格</td>
         <td><%= f.text_field :price %>円</td>
       </tr>
       <tr>
         <td>販売ステータス</td>
         <td><%= f.radio_button :sale_status,true %><label>販売中</label><%= f.radio_button :sale_status,false %>販売停止中</td>
       </tr>
     </table>
     <label></label><br>
     <label></label><br>
     <label></label><br>
     <label></label><br>
     <label></label><br>
     <label></label><br>
     <%= f.submit"新規登録" %>
   <% end %>
 </div>