<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
      <div class="border border-dark px-3 text-center">
        <p>ジャンル検索</p>
        <% @genres.each do |genre| %>
          <p><%= link_to search_path(tag_name: genre.name) do %>
              <%= genre.name %>
             <% end %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="col">
      <h1>商品一覧<span>(全<%= @foods.count %>件)</span></h1>
      <div class="d-flex flex-wrap justify-content-between">
      <% @foods.each do |food| %>
        <div>
         <%= link_to public_food_path(food.id) do %>
           <%= image_tag food.image,size: '150x150' %>
         <% end %>
           <p class="text-center"><%= food.name %></p>
           <p class="text-center">¥<%= food.price %></p>
        </div>
      <% end %>
      </div>
      <%= paginate @foods %>
    </div>
  </div>

</div>
