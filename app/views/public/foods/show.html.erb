<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
      <div class="border border-dark px-3 text-center">
        <p>ジャンル検索</p>
          <% @genres.each do |genre| %>
          <p>
            <%= link_to search_path(tag_name: genre.name) do %>
           　　 <%= genre.name %>
            <% end %>
          </p>
          <% end %>
      </div>
    </div>
    <div class="col-md-5">
      <%= image_tag @food.image,size: '300x250' %>
    </div>
    <div class="col">
    <%= render "layouts/errors", obj: @cart_food %>
      <h1><%= @food.name %></h1>
      <p><%= @food.explanation %></p>
      <p>¥<%= @food.with_tax_price %>(税込)<br>
      <%= form_with model: @cart_food,url: public_cart_foods_path,method: :post do |f| %>
        <%= f.select :quantity,*[1..10],include_blank: "個数選択" %>
        <%= f.hidden_field :food_id,:value=>@food.id %>
        <%= f.submit"カートに入れる",class:"bth btn-success" %>
      <% end %></p>
    </div>
  </div>
</div>