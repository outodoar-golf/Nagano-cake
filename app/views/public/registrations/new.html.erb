<div class="container">
 <div class= "row">
  <div class= "col-lg-2"></div>
  <div class= "col-lg-3">
    <h3 class="bg-light">新規会員登録</h3>
  </div>
  </div>


   <div class= "row">
      <div class="col-lg-1"></div>
      <div class="col-lg-11">
        <%= form_with model: @customer,url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="table table-borderless">
         <tr>
          <td>名前</td>
          <td>(姓)<%= f.text_field :first_name %>
              (名)<%= f.text_field :last_name %>
          </td>
         </tr>
         <tr>
          <td>フリガナ</td>
          <td>(セイ)<%= f.text_field :first_name_kana %>
              (メイ)<%= f.text_field :last_name_kana %>
          </td>
         </tr>
         <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
         </tr>
         <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
         </tr>
         <tr>
          <td>住所</td>
          <td><%= f.text_field :address,size: 60 %></td>
         </tr>
         <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
         </tr>
         <tr>
          <td>パスワード（6文字以上）</td>
          <td> <% if @minimum_password_length %>
           <em>(<%= @minimum_password_length %> characters minimum)</em>
           <% end %><br />
           <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
         </tr>

         <tr>
          <td>パスワード（確認用）</td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
         </tr>
         <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存",class: "btn btn-success" %>
          </td>
         </tr>
        </table>
       <% end %>
     </div>
   </div>
   <div class= "row">
            <div class= "col-lg-2"></div>
            <div class= "col-lg-3">
              <h3 class="bg-light">既に登録済みの方</h3>
            </div>
   </div>
       
        <%= render "public/shared/links" %>からログイン
</div>
