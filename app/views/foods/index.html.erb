<div class="container">
  <div class="row">
    <div class="col-md-2">
      <div class="border border-dark px-3">
        <p>ジャンル検索</p>
        <% @genres.each do |genre| %>
          <p><%= genre.name %></p>
        <% end %>
      </div>
    </div>
    <div class="col offset-md-1">
      <h1>商品一覧<span>(全<%= @foods.count %>件)</span></h1>
      <div class="d-flex flex-wrap justify-content-start">
      <% @foods.each do |food| %>
        <div>
         <%= link_to food_path(food.id) do %>
           <%= image_tag food.image,size: '150x150' %>
         <% end %>
           <p><%= food.name %></p>
           <p>¥<%= food.price %></p>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>