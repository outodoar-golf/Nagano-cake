<div class="row offset-">
  <h2>注文情報確認</h2>
</div>


<div class="container">
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
            <% @cart_foods.each do |cart_food| %>
          <tr>
            <td><%= image_tag cart_food.food.get_image(63,63) %><%= cart_food.food.name %></td>
            <td><%= cart_food.food.add_tax_price.to_s(:delimited) %>円</td>
            <td><%= cart_food.amount %></td>
            <td><%= (cart_food.food.add_tax_price * cart_food.amount).to_s(:delimited) %>円</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div class="col-4">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th scope="row">送料</th>
          <td><%= @order.shipping_price %>円</td>
        </tr>
        <tr>
          <th scope="row">商品合計</th>
          <td><%= (@order.total_price).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th scope="row">請求金額</th>
          <td><%= (@order.total_price + @order.shipping_price).to_s(:delimited) %>円</td>
        </tr>
      </tbody>
    </table>
   </div>
  </div>
  <div class="row">
  <h3>支払方法</h3>　<%= @order.payment_method_i18n %>
  </div>
  <div class="row">
  <h3>お届け先</h3>　〒<%= @order.postal_code %><%= @order.address %><%= @order.name %>
  </div>
    <%= form_with model:@order, url: orders_path, local:true do |f| %>
    <%= f.hidden_field :payment_method ,:value => @order.payment_method %>
    <%= f.hidden_field :shipping_price ,:value => @order.shipping_price %>
    <%= f.hidden_field :address,:value => @order.address %>
    <%= f.hidden_field :postal_code,:value => @order.postal_code %>
    <%= f.hidden_field :name,:value => @order.name %>
    <%= f.hidden_field :total_price ,:value => @order.total_price %>
    <%= f.submit "注文を確定する", data: { confirm: '注文を確定しますか？' }, class:"btn btn-success" %>
    <% end %>
</div>