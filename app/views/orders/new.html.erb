<h1 class="text-center">注文情報入力</h1>

<div class="mx-auto w-50 border rounded bg-white p-3">
<%= form_with model: @new_order, url: confirm_orders_path, local: true, method: :post do |f| %>

  <div class="form-group">
    <div class="lead mb-2">支払い方法</div>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>



  <h2>お届け先</h2>
   <div class="form-group">
    <%=f.radio_button :address_option, 0 %>
    <%=f.label :address_option, "ご自身の住所" %>
    〒<%= current_customer.postal_code %><%= current_customer.address %>
    <%= current_customer.last_name%><%= current_customer.first_name %>
  </div>

  <div class="form-group">
    <%= f.radio_button :address_option, 1 %>
    <%= f.label :address_option, "登録済み住所から選択" %>
    <%= f.collection_select :address_id, @addresses, :id, :name, include_blank: "選択してください" %>
  </div>

    <div class="form-group row">
    <div class="col-3">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    </div>
    <div class="col-7">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="cpl-3">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-7">
      <%= f.text_field :address, autofocus: true, autocomplete: "adress", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= f.label :name, "宛名" %>
    </div>
    <div class="col-7">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  </div>

  </div>

    <%= f.submit "購入確認へ", class:"btn btn-primary " %>
  <% end %>
  </div>