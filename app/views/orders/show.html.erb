<h1>注文履歴詳細</h1>

<div class="container">
  <div class="row">
    <div class="col-8">
      <h5>注文情報</h5>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
        </table>
    </div>
    <div class="col-4">
    <h5>請求情報</h5>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th scope="row">送料</th>
          <td><%= @order.shipping_price %>円</td>
        </tr>
        <tr>
          <th scope="row">商品合計</th>
          <td><%= (@order.total_price).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th scope="row">請求金額</th>
          <td><%= (@order.total_price + @order.shipping_price).to_s(:delimited) %>円</td>
        </tr>
      </tbody>
    </table>
   </div>
   <div class="col-10">
   <h5>注文内容</h5>
   <table class="table table-bordered">
     <thead>
     <tr>
       <th>商品</th>
       <th>単価（税込）</th>
       <th>個数</th>
       <th>小計</th>
     </tr>
   </thead>
   <tbody>
     <% @order.order_details.each do |order_detail|  %>
   <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.price %></td>
    <td><%= order_detail.amount %></td>
    <td><%= (order_detail.price*order_detail.amount).floor %></td>
   </tr>
   <% end %>
   </tbody>
   </table>
  </div>
  </div>
</div>

